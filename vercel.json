{
  "version": 2,
  "buildCommand": "cd apps/client && pnpm build",
  "outputDirectory": "apps/client/build",
  "installCommand": "pnpm install",
  "functions": {
    "api/*.ts": {
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/[[...route]].ts" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/apps/client/build/$1" }
  ]
}
