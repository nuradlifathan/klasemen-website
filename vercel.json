{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "apps/client/build",
  "installCommand": "npm install --legacy-peer-deps --ignore-scripts && cd apps/client && npm install --legacy-peer-deps --ignore-scripts",
  "functions": {
    "api/*.ts": {
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/[[...route]].ts" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/apps/client/build/$1" }
  ]
}
